<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_recommend_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门推荐"
            />

        <TextView
            android:id="@+id/item_recommend_head_best_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="排行榜"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        >
        <!--GridLayout可以设置列数, 直接在里面写控件-->
        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="2"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/item_commend_card_view_0"
                style="@style/RecommendItemCard"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#dfd6d6"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item_commend_body_icon_0"
                        android:src="@drawable/img_tips_error_banner_tv"
                        style="@style/RecommendItemBodyIcon"/>

                    <TextView
                        android:id="@+id/item_commend_body_title_0"
                        style="@style/RecommendItemBodyTxt"
                        tools:text="标题"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/item_commend_body_count_0"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="10万"/>

                        <TextView
                            android:id="@+id/item_commend_body_danmaku_0"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="弹幕"/>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/item_commend_card_view_1"
                style="@style/RecommendItemCard"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#dfd6d6"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item_commend_body_icon_1"
                        style="@style/RecommendItemBodyIcon"/>

                    <TextView
                        android:id="@+id/item_commend_body_title_1"
                        style="@style/RecommendItemBodyTxt"
                        tools:text="标题"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/item_commend_body_count_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="10万"/>

                        <TextView
                            android:id="@+id/item_commend_body_danmaku_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="弹幕"/>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/item_commend_card_view_2"
                style="@style/RecommendItemCard"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#dfd6d6"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item_commend_body_icon_2"
                        style="@style/RecommendItemBodyIcon"
                        />

                    <TextView
                        android:id="@+id/item_commend_body_title_2"
                        style="@style/RecommendItemBodyTxt"
                        tools:text="标题"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/item_commend_body_count_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="10万"/>

                        <TextView
                            android:id="@+id/item_commend_body_danmaku_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="弹幕"/>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/item_commend_card_view_3"
                style="@style/RecommendItemCard"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#dfd6d6"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/item_commend_body_icon_3"
                        style="@style/RecommendItemBodyIcon"/>

                    <TextView
                        android:id="@+id/item_commend_body_title_3"
                        style="@style/RecommendItemBodyTxt"
                        tools:text="标题"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/item_commend_body_count_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="10万"/>

                        <TextView
                            android:id="@+id/item_commend_body_danmaku_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="弹幕"/>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </android.support.v7.widget.GridLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/item_commend_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="换一拨推荐"/>

</LinearLayout>
