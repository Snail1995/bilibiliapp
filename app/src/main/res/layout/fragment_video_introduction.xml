<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_video_nested_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xiaohong.bilibilivideo.fragments.videoplay.IntroductionFragment">


    <LinearLayout
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

        <TextView
            android:id="@+id/video_introduction_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="文章标题"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/video_introduction_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="文章简介"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/VideoIntroducationLinear">

                <TextView
                    android:id="@+id/video_introduction_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/videoplayer_erect_icon_round"
                    android:padding="7dp"
                    android:text="10"
                    android:textColor="#36C27E"/>

                <ImageView
                    style="@style/VideoIntroducationImage"
                    android:src="@drawable/ic_share_green"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享"/>
            </LinearLayout>

            <LinearLayout
                style="@style/VideoIntroducationLinear"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/video_introduction_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/videoplayer_erect_icon_round"
                    android:padding="7dp"
                    android:text="10"
                    android:textColor="#ca971b"/>

                <ImageView
                    style="@style/VideoIntroducationImage"
                    android:src="@drawable/ic_coin"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投硬币"/>

            </LinearLayout>

            <LinearLayout
                style="@style/VideoIntroducationLinear">

                <TextView
                    android:id="@+id/video_introduction_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/videoplayer_erect_icon_round"
                    android:padding="7dp"
                    android:text="10"
                    android:textColor="#F59DB6"/>

                <ImageView
                    style="@style/VideoIntroducationImage"
                    android:src="@drawable/ic_collect"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏"/>

            </LinearLayout>

            <LinearLayout
                style="@style/VideoIntroducationLinear">

                <TextView
                    android:id="@+id/video_introduction_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/videoplayer_erect_icon_round"
                    android:padding="7dp"
                    android:text="10"
                    android:textColor="#72B6ED"/>

                <ImageView
                    style="@style/VideoIntroducationImage"
                    android:src="@drawable/ic_download"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下载"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="10dp"
            android:background="?android:attr/listDivider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:src="@mipmap/ic_launcher"
                android:id="@+id/video_introduction_user_image"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/video_introduction_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="用户姓名"
                    android:textColor="#000"/>

                <TextView
                    android:id="@+id/video_introduction_user_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="投递时间"/>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bangumi_follow"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginTop="10dp"
            android:background="?android:attr/listDivider"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:text="视频相关"
            android:textColor="#000"/>


        <com.xiaohong.bilibilivideo.view.MyListView
            android:id="@+id/video_introduction_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>



