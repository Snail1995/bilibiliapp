<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/linear_layout_padding"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_recommend_region_region"
            android:layout_width="0dp"
            android:layout_weight="1"
            tools:text="活动区"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="进去看看"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!--用GirldLayout实现有几行-->
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="2">
        <!--用CardView实现带有效果的卡片类似的展示-->
        <android.support.v7.widget.CardView
            android:id="@+id/item_commend_card_view_region_0"
            style="@style/RecommendItemCard">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <ImageView
                   android:id="@+id/item_commend_body_region_icon_0"
                   android:src="@drawable/img_tips_error_banner_tv"
                   style="@style/RecommendItemBodyIcon"
                   />
               <TextView
                   android:id="@+id/item_commend_body_region_title_0"
                   style="@style/RecommendItemBodyTxt"
                   tools:text="标题"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"

                   android:padding="3dp"
                   android:orientation="horizontal">

                   <TextView
                       android:id="@+id/item_commend_body_region_play_0"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       tools:text="1.3万"/>


                   <TextView
                       android:id="@+id/item_commend_body_region_danmaku_0"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       tools:text="1000"/>

               </LinearLayout>

           </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/item_commend_card_view_region_1"
            style="@style/RecommendItemCard">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/item_commend_body_region_icon_1"
                    android:src="@drawable/img_tips_error_banner_tv"
                    style="@style/RecommendItemBodyIcon"
                    />
                <TextView
                    android:id="@+id/item_commend_body_region_title_1"
                    style="@style/RecommendItemBodyTxt"
                    tools:text="标题"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:padding="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_commend_body_region_play_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:text="1.3万"/>


                    <TextView
                        android:id="@+id/item_commend_body_region_danmaku_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="1000"/>

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/item_commend_card_view_region_2"
            style="@style/RecommendItemCard">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/item_commend_body_region_icon_2"
                    android:src="@drawable/img_tips_error_banner_tv"
                    style="@style/RecommendItemBodyIcon"
                    />
                <TextView
                    android:id="@+id/item_commend_body_region_title_2"
                    style="@style/RecommendItemBodyTxt"
                    tools:text="标题"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:padding="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_commend_body_region_play_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:text="1.3万"/>


                    <TextView
                        android:id="@+id/item_commend_body_region_danmaku_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="1000"/>

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/item_commend_card_view_region_3"
            style="@style/RecommendItemCard">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/item_commend_body_region_icon_3"
                    android:src="@drawable/img_tips_error_banner_tv"
                    style="@style/RecommendItemBodyIcon"
                    />
                <TextView
                    android:id="@+id/item_commend_body_region_title_3"
                    style="@style/RecommendItemBodyTxt"
                    tools:text="标题"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:padding="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_commend_body_region_play_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:text="1.3万"/>


                    <TextView
                        android:id="@+id/item_commend_body_region_danmaku_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="1000"/>

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>


    </android.support.v7.widget.GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="更多"
            android:id="@+id/item_recommend_region_bottom_search_more"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="10条新动态,点击刷新"
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/ic_category_more_refresh"
            android:id="@+id/item_recommend_region_bottom_refresh"
            android:layout_gravity="end"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>
